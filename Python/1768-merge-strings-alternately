class Solution:
    def mergeAlternately(self, word1: str, word2: str) -> str:
	    res = ""

	    for i, (c1, c2) in enumerate(zip(word1, word2)):
		    res += c1
		    res += c2

	    if (i + 1) * 2 == (len(word1) + len(word2)):
		    return res

	    if i + 1 < len(word1):
		    res += word1[i + 1:]

	    else:
		     res += word2[i + 1:]

	    return res
        